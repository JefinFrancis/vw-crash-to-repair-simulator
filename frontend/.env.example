# VW Crash-to-Repair Frontend Environment Variables
# Copy this file to .env.development or .env.production and adjust values

# =============================================================================
# API CONFIGURATION
# =============================================================================
# The API URL can be configured in two ways:
#
# Option 1: Full URL (includes the API path)
#   VITE_API_URL=http://localhost:8000/api/v1
#
# Option 2: Base URL + Prefix (recommended for flexibility)
#   VITE_API_URL=http://localhost:8000
#   VITE_API_PREFIX=/api/v1
#
# If VITE_API_URL already contains '/api/', VITE_API_PREFIX is ignored.

VITE_API_URL=http://localhost:8000
VITE_API_PREFIX=/api/v1
VITE_API_TIMEOUT=30000

# =============================================================================
# BEAMNG CONFIGURATION
# =============================================================================
VITE_BEAMNG_HOST=localhost
VITE_BEAMNG_PORT=64256
VITE_BEAMNG_ENABLED=true

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=VW Crash-to-Repair Simulator
VITE_APP_VERSION=2.0.0
VITE_ENVIRONMENT=development
VITE_DEBUG=false

# =============================================================================
# BRAZILIAN LOCALIZATION
# =============================================================================
VITE_CURRENCY=BRL
VITE_LANGUAGE=pt_BR
VITE_TIMEZONE=America/Sao_Paulo

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_TELEMETRY=false
VITE_ENABLE_REALTIME=true
