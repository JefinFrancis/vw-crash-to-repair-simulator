# VW Crash-to-Repair Frontend Environment Variables

# API Configuration
# Note: VITE_API_URL can be either:
#   - Full URL: http://localhost:8000/api/v1 (includes path)
#   - Base URL: http://localhost:8000 (uses VITE_API_PREFIX)
VITE_API_URL=http://localhost:8000
VITE_API_PREFIX=/api/v1
VITE_API_TIMEOUT=30000

# BeamNG Configuration
VITE_BEAMNG_HOST=localhost
VITE_BEAMNG_PORT=64256
VITE_BEAMNG_ENABLED=true

# Application Configuration
VITE_APP_NAME=VW Crash-to-Repair Simulator
VITE_APP_VERSION=2.0.0
VITE_ENVIRONMENT=development
VITE_DEBUG=true

# Brazilian Settings
VITE_CURRENCY=BRL
VITE_LANGUAGE=pt_BR
VITE_TIMEZONE=America/Sao_Paulo

# Feature Flags
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_TELEMETRY=true
VITE_ENABLE_REALTIME=true
VITE_ENABLE_PWA=false