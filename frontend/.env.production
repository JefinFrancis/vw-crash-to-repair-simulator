# VW Crash-to-Repair Frontend - Production Environment
# This file is loaded when building for production (npm run build)

# =============================================================================
# API CONFIGURATION
# =============================================================================
# For production, typically use the same domain or a dedicated API subdomain
VITE_API_URL=
VITE_API_PREFIX=/api/v1
VITE_API_TIMEOUT=30000

# =============================================================================
# BEAMNG CONFIGURATION
# =============================================================================
# BeamNG is typically disabled in production web deployments
VITE_BEAMNG_HOST=localhost
VITE_BEAMNG_PORT=64256
VITE_BEAMNG_ENABLED=false

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=VW Crash-to-Repair Simulator
VITE_APP_VERSION=2.0.0
VITE_ENVIRONMENT=production
VITE_DEBUG=false

# =============================================================================
# BRAZILIAN LOCALIZATION
# =============================================================================
VITE_CURRENCY=BRL
VITE_LANGUAGE=pt_BR
VITE_TIMEZONE=America/Sao_Paulo

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_TELEMETRY=true
VITE_ENABLE_REALTIME=true
